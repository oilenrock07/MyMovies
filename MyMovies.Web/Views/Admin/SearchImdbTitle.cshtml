@model IEnumerable<MyMovies.Entities.Movie>

<div id="content" role="main">
    <div class="page-header dark larger larger-desc">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>Admin Page</h1>
                    <p class="page-header-desc">Create, edit or delete movie details</p>
                </div>
                <div class="col-md-6">
                    <ol class="breadcrumb">
                        <li><a href="index.html">Admin</a></li>
                        <li class="active">Maintenance</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container" ng-controller="AdminController">


        <div class="row">
            <div class="col-md-8">
                <table class="table table-striped">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.Poster"/></td>
                            <td>@Html.ActionLink(item.Title, "Search" ,"Admin", new { key = item.ImdbId }, null)</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</div>