@model MyMovies.Web.ViewModels.MovieViewModel

<div class="col-sm-6">
    <div class="col-sm-5">
        <h3>@Model.Title (@Model.Year)</h3>
        <div class="portfolio-item portfolio-meta-slideup push">
            <figure>
                <a href="/Movie/Detail?id=@Model.MovieId" class="zoom-item" title="@Model.Title">
                    <img src="@Model.Poster" alt="@Model.Title" class="img-responsive">
                </a>
            </figure>
            <div class="portfolio-meta">
                <a href="/Admin/Search?key=@Model.ImdbId">Edit</a>
                <h1 class="movie-poster">
                    <a href="javascript:void(0)" title="Favourite" ng-click="addToWatchList(@Model.MovieId)">
                        <i class="fa fa-heart-o"></i>
                    </a>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-sm-7">
        <div class="col-xs-12"><span class=" pull-right">@Model.Rate.ToString("0.00")/10</span></div>
        <div>
            @foreach (var genre in Model.GenreList)
            {
                @Html.ActionLink(@genre, "Index", new { Category = @genre })
                if (genre != Model.LastGenre)
                {
                    <text>|</text>
                }
            }
        </div>
        <div>
            <span>Stars: </span>
            <div>
                @foreach (var star in Model.StarLists)
                {
                    @Html.ActionLink(@star, "Index", new { Star = @star })
                    @*<a href="/?Star=@star">@star</a>*@
                if (star != Model.LastStar)
                {
                    <text>|</text>
                    }
                }
            </div>
        </div>
        <div>
            <span>Writers: </span>
            <div>
                @foreach (var writer in Model.WriterList)
                {
                    <a href="/?Writer=@writer">@writer</a>
                    if (writer != Model.LastWriter)
                    {
                        <text>|</text>
                    }
                }
            </div>
        </div>
        <div>
            <span>Directors: </span>
            <div>
                @foreach (var director in Model.DirectorList)
                {
                    <a href="/?Director=@director">@director</a>
                    if (director != Model.LastDirector)
                    {
                        <text>|</text>
                    }
                }
            </div>
        </div>
        <div>
            @Model.ShortenedSumary
        </div>
    </div>
</div>



<script>
    var app = angular.module('MovieApp', []);
    app.controller('MovieListController', function ($scope) {
        $scope.addToWatchList = function (movieId) {
            alert(movieId);
        }
    });
</script>
